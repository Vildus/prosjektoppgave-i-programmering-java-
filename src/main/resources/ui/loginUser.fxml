<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vb" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="60.0" layoutY="60.0" text="User sign in:"
               textAlignment="CENTER">
            <font>
                <Font size="24.0"/>
            </font>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </Label>
        <GridPane alignment="CENTER" layoutX="60.0" layoutY="139.0" maxWidth="400.0" prefWidth="400.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" percentWidth="20.0" prefWidth="120.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label fx:id="lblUserName" alignment="CENTER" contentDisplay="TEXT_ONLY" text="Customer ID"
                       textAlignment="CENTER" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtUserName" maxWidth="250.0" promptText="Enter customer ID" GridPane.columnIndex="1"
                           GridPane.rowIndex="0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </TextField>
                <Button fx:id="btnSignInUser" mnemonicParsing="false" onAction="#signInUser" text="Sign in"
                        GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets top="40"/>
                    </GridPane.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="70.0" top="50.0"/>
            </VBox.margin>
        </GridPane>
        <Label contentDisplay="TOP" text="Super user sign in:" textAlignment="CENTER">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <GridPane alignment="CENTER" maxWidth="250.0" prefWidth="250.0">
            <VBox.margin>
                <Insets top="50.0"/>
            </VBox.margin>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" percentWidth="20.0" prefWidth="120.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label fx:id="lblSuperUserName" alignment="CENTER" contentDisplay="TEXT_ONLY" text="User name:"
                       textAlignment="CENTER" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtSuperUserName" maxWidth="250.0" promptText="Enter user name"
                           GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </TextField>
                <Label fx:id="lblSuperUserPassword" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets top="10"/>
                    </GridPane.margin>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="txtSuperUserPassword" maxWidth="250.0" promptText="Enter password"
                               GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets top="10"/>
                    </GridPane.margin>
                    <font>
                        <Font size="18.0"/>
                    </font>
                </PasswordField>
                <Button fx:id="btnSignInSuperUser" mnemonicParsing="false" onAction="#signInSuperUser" text="Sign in"
                        GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets top="40"/>
                    </GridPane.margin>
                </Button>
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
    </padding>
</VBox>
