<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <TableView fx:id="tvInventory" layoutX="44.0" layoutY="128.0" prefHeight="435.0" prefWidth="912.0">
            <columns>
                <TableColumn fx:id="colCategory" minWidth="-1.0" prefWidth="-1.0" text="Category"/>
                <TableColumn fx:id="colArticleNumber" minWidth="-1.0" maxWidth="4000.0" prefWidth="-1.0" text="Article number"/>
                <TableColumn fx:id="colBrand" minWidth="-1.0" prefWidth="-1.0" text="Brand"/>
                <TableColumn fx:id="colModel" minWidth="-1.0" prefWidth="-1.0" text="Model"/>
                <TableColumn fx:id="colDesc" maxWidth="10000.0" minWidth="-1.0" prefWidth="-1.0" text="Description"/>
                <TableColumn fx:id="colPrice" minWidth="-1.0" prefWidth="-1.0" text="Price NOK"/>
                <TableColumn fx:id="colInStock" maxWidth="3000.0" minWidth="-1.0" prefWidth="-1.0" text="InStock"/>
                <TableColumn fx:id="colEditDelete" minWidth="-1.0" prefWidth="-1.0" text=""/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <TextField fx:id="txtFilter" layoutX="44.0" layoutY="83.0" onKeyTyped="#txtFilterKeyTyped" promptText="Search">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>
        <ComboBox fx:id="cbCreateNewItem" layoutX="44.0" layoutY="23.0" onAction="#cbCreateNewItemAction"
                  prefWidth="200.0"/>
        <Button layoutX="871.0" layoutY="32.0" mnemonicParsing="false" onAction="#signOut" text="Sign out">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
